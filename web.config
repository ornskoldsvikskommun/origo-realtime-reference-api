
<configuration>
    <appSettings>
      <!-- Appsettings are changed by octopus and will appear as environment variables in node when run in IIS-->
      <!-- Keys must exist for octopus to be able to replace them, it does not add keys.-->
      
      <!-- Must know virtual path when deployed as IIS application under a site  -->
      <add key="virtualPath" value="" />
      <add key="pgConnectString" value="" />
      <add key="pgDatabase" value="" />
      <add key="pgPort" value="" />
      <add key="pgUser" value="" />
      <add key="pgPassword" value="" />
    </appSettings>

    <system.webServer>
      <!--Set some directives to iisnode-->
      <!--Make node get logged in user (if any)-->
      <!--Must flush, otherwise IIS will buffer 4MB -->
      <iisnode flushResponse="true" promoteServerVars="AUTH_USER,AUTH_TYPE" loggingEnabled="true" logDirectory="c:\tmp\%APP_POOL_ID%" nodeProcessCommandLine="&quot;C:\bin\Node22\node.exe&quot;" interceptor="&quot;%programfiles%\iisnode\interceptor_m.js&quot;"/>
        <!-- indicates that the server.js file is a node.js application to be handled by the iisnode module -->
        <handlers>
            <add name="iisnode" path="app.js" verb="*" modules="iisnode" />
        </handlers>
	
        <rewrite>
            <rules>
                <rule name="sendToNode">
                    <match url="/*" negate="false" />
                    <action type="Rewrite" url="app.js" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>